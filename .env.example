# OpenAI API Key
OPENAI_API_KEY=sk-...

# Data directory for session storage
DATA_DIR=./data/sessions

# Chunk duration in milliseconds (how often capture.js sends audio chunks)
CHUNK_MS=2000

# OpenAI models
TRANSCRIBE_MODEL_BATCH=whisper-1
TRANSCRIBE_MODEL_REALTIME=gpt-4o-realtime-preview

# Server configuration
PORT=3000
HOST=0.0.0.0

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Bot configuration
BOT_HEADLESS=true

# Authentication
AUTH_USERNAME=admin
AUTH_PASSWORD=change_me_in_production
